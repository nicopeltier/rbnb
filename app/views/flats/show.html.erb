<div class="container">
  <div class="row">
     <div class="col-sm-offset-1 col-sm-5">
        <div class="classWithPad">
          <h3 class="media-heading h2"><%= @flat.short_description %></h3>
          <br>
          <dl class="dl-horizontal">
              <dt>Nbr of rooms</dt>
              <dd><%= @flat.room_count %></dd>
              <dt>Type</dt>
              <dd><%= @flat.property_type %></dd>
              <dt>Price per night</dt>
              <dd><%= @flat.price %></dd>
              <dt>Street</dt>
              <dd><%= @flat.street %></dd>
              <dt>City</dt>
              <dd><%= @flat.city %></dd>
              <dt>Zip Code</dt>
              <dd><%= @flat.zipcode %></dd>
              <dt>Country</dt>
              <dd><%= @flat.country %></dd>
          </dl>
          <%= @flat.description %>
        </div>
      </div>
    <div class="col-sm-5">
      <div class="classWithPad">
          <% if @flat.picture.url %>
          <%= image_tag @flat.picture.url(:show), :class => "img-rounded" %>
          <% else %>
          no picture
          <% end %>
          <br>
      </div>
      <div class="classWithPad">
        <% if @flat.user != current_user %>
          <%= simple_form_for [@flat, @booking] do |b| %>
          <%= b.input :start_date %>
          <%= b.input :end_date %>
          <%= b.submit class: "btn btn-medium" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-1 col-sm-10">
      <p>
        <h3>Reviews</h3>
      </p>
     <div class="classWithPad">
       <%= render 'reviews/form', flat: @flat, review: @review %>
      </div>
        <div id="reviews">
        <% @reviews.each do |review| %>
          <%= render 'reviews/show', flat: @flat, review: review %>
        <% end %>
      </div>
    </div>
  </div>
</div>


